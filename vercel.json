{
    "version": 2,
    "env": {
      "VERCEL": "true"
    },
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 10
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|svg|ico|json))",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }